# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# XML files
[*.{xml,xaml,csproj,props,targets,manifest,plist,storyboard}]
indent_size = 2
indent_style = space
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
